@model FoodCoreSite.Data.Models.Category

@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1>Category Add Page</h1>
<hr />
@using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
{
    @Html.LabelFor(x=>x.CategoryName)
    @Html.TextBoxFor(x=>x.CategoryName,new {@class="form-control",placeholder="Vegetables"})
    @Html.ValidationMessageFor(x=>x.CategoryName,"",new{@style="color:red"})
    <br />
    @Html.LabelFor(x=>x.CategoryDescription)
    @Html.TextBoxFor(x=>x.CategoryDescription,new {@class="form-control",placeholder="Vegetables is a nice food."})
    @Html.ValidationMessageFor(x=>x.CategoryDescription,"",new{@style="color:red"})
    <br />
    <button class="btn btn-info">Save</button>
}