@model List<FoodCoreSite.Data.Models.Category>

@{
    Layout = "_Layout";
}

<br />
<h2>Category List</h2>
<hr />
@using (Html.BeginForm())
{
    <p>
        Food Name : @Html.TextBox("p")
        <input type="submit" value="Find" />
    </p>
}
<hr />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryId</td>
            <td>@x.CategoryName</td>
            <td>@x.Status</td>
            <td><a href="/Category/CategoryDelete/@x.CategoryId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@x.CategoryId" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>