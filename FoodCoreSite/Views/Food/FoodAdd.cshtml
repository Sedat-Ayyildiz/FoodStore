@model FoodCoreSite.Data.Models.ProductAdd

@{
    ViewData["Title"] = "FoodAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Food Add Page</h2>
<hr />
<form class="form-group" action="FoodAdd" asp-controller="Food" method="post" enctype="multipart/form-data">
    @Html.Label("Food Name")
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control",placeholder="Apple"})
    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x=>x.Stock,new {@class="form-control",placeholder="25 Adet"})
    @Html.ValidationMessageFor(x=>x.Stock,"",new{@style="color:red"})
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x=>x.Price,new {@class="form-control",placeholder="20 TL"})
    @Html.ValidationMessageFor(x=>x.Price,"",new{@style="color:red"})
    <br />
    @Html.Label("Choose Image")
    <input type="file" name="ImageUrl" />
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.values,new {@class="form-control",placeholder="Fruit"})
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x=>x.Description,new {@class="form-control",placeholder="Apple is very nice fruit."})
    @Html.ValidationMessageFor(x=>x.Description,"",new{@style="color:red"})
    <br />
    <button class="btn btn-primary">Save</button>
</form>