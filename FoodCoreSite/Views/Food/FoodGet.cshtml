@model FoodCoreSite.Data.Models.Food

@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Food Update Page</h2>
<hr />
@using (Html.BeginForm("FoodUpdate", "Food", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.FoodId)
    @Html.Label("Food Name")
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control",placeholder="Apple"})
    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x=>x.Stock,new {@class="form-control",placeholder="25 Adet"})
    @Html.ValidationMessageFor(x=>x.Stock,"",new{@style="color:red"})
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x=>x.Price,new {@class="form-control",placeholder="20 TL"})
    @Html.ValidationMessageFor(x=>x.Price,"",new{@style="color:red"})
    <br />
    @Html.Label("Image Url")
    @Html.TextBoxFor(x=>x.ImageUrl,new {@class="form-control",placeholder="https://www.vegetables.com"})
    @Html.ValidationMessageFor(x=>x.ImageUrl,"",new{@style="color:red"})
    <br />
    @Html.Label("Category")
    @* @Html.TextBoxFor(x=>x.CategoryId,new {@class="form-control",placeholder="https://www.vegetables.com"}) *@
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.values,new {@class="form-control",placeholder="https://www.vegetables.com"})
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x=>x.Description,new {@class="form-control",placeholder="Apple is very nice fruit."})
    @Html.ValidationMessageFor(x=>x.Description,"",new{@style="color:red"})
    <br />
    <button class="btn btn-primary">Save</button>
}